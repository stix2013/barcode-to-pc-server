{
  "name": "nysco-qrcode-server",
  "description": "NYSco QRCode Server app",
  "keywords": [
    "barcode",
    "qrcode",
    "app",
    "remote"
  ],
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Filippo Tortomasi",
    "email": "filippo.tortomasi@gmail.com.com",
    "url": "https://github.com/fttx"
  },
  "main": "main.js",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "test": "ng test",
    "e2e": "ng e2e",
    "browser": "ng serve",
    "browser:keep-dist": "ng serve --delete-output-path=false",
    "electron": "electron ./dist",
    "electron-dev": "electron ./dist/main.js --dev",
    "build:main": "tsc --outDir dist main.ts",
    "build:main:watch": "tsc -w --outDir dist main.ts",
    "build": "ng build --prod --output-path=dist && npm run build:main && copyfiles package.json dist && copyfiles node_modules dist",
    "start": "npm run build:main && npm-run-all --parallel browser electron-dev",
    "watch": "npm-run-all --parallel build:main:watch browser:keep-dist",
    "prepare:dist": "cross-env NODE_ENV=production ng build --prod --output-path=dist && tsc --outDir dist main.ts  && copyfiles package.json dist && cd dist && npm install --prod && cd .. && copyfiles -f electron-resources/* dist/build/",
    "dist": "cross-env NODE_ENV=production npm run prepare:dist && build --project dist",
    "dist32": "cross-env NODE_ENV=production npm run prepare:dist && build --ia32 --project dist",
    "fix-sass": "npm rebuild node-sass",
    "postinstall": "electron-builder install-app-deps"
  },
  "private": true,
  "build": {
    "compression": "maximum",
    "appId": "com.nysco.qrcodeserver",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerSidebar": "build/MUI_WELCOMEFINISHPAGE_BITMAP.bmp"
    }
  },
  "dependencies": {
    "@angular/animations": "^4.4.5",
    "@angular/common": "^4.4.5",
    "@angular/compiler": "^4.4.5",
    "@angular/core": "^4.4.5",
    "@angular/forms": "^4.4.5",
    "@angular/http": "^4.4.5",
    "@angular/platform-browser": "^4.4.5",
    "@angular/platform-browser-dynamic": "^4.4.5",
    "@angular/router": "^4.4.5",
    "angular2-qrcode": "^2.0.1",
    "bonjour": "^3.5.0",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.1",
    "file-saver": "^1.3.3",
    "mdns": "^2.3.3",
    "network": "^0.4.0",
    "ng2-dragula": "^1.5.0",
    "ngx-bootstrap": "^1.9.3",
    "ngx-clipboard": "~8.1.0",
    "papaparse": "^4.1.2",
    "robotjs": "^0.4.7",
    "rxjs": "^5.4.2",
    "ws": "^3.2.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "~1.4.5",
    "@angular/compiler-cli": "^4.4.5",
    "@angular/language-service": "^4.4.5",
    "@types/bonjour": "^3.5.5",
    "@types/electron": "^1.6.10",
    "@types/file-saver": "0.0.1",
    "@types/jasmine": "~2.6.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.34",
    "@types/papaparse": "^4.1.28",
    "codelyzer": "~3.2.1",
    "copyfiles": "1.2.0",
    "cross-env": "5.0.5",
    "electron": "~1.8.1",
    "electron-builder": "^19.35.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.1",
    "protractor": "~5.1.2",
    "ts-node": "~3.3.0",
    "tslint": "^5.7.0",
    "typescript": "~2.3.4",
    "webpack-sources": "^1.0.1"
  }
}
